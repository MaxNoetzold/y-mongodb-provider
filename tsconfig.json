{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"outDir": "dist",
		"useDefineForClassFields": true,
		"skipLibCheck": true,
		"noEmit": true,
		"esModuleInterop": true,

		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"declaration": true,
		"declarationMap": true,
		"sourceMap": true,

		/* Linting */
		"strict": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"noFallthroughCasesInSwitch": true
	},
	"include": ["src"]
}
